<h1>Pirate</h1>

<div class="pirate">
  <h2>Name: <%= @pirate.name %></h2><br>
  <h2>Weight: <%= @pirate.weight %> pounds</h2><br>
  <h2>Height: <%= @pirate.height %> inches</h2>
</div><br>


<h1>Ship</h1>
<% @ships.each do |ship| %>
   <div class="ship">
    <p>Name: <%= ship.name %></p><br>
    <p>Type: <%= ship.type %></p><br>
    <p>Booty: <%= ship.booty %></p>
   </div><br>
  <% end %>
